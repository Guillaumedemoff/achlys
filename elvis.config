%% == Elvis ==
[
  {elvis,
   [
    {config,
     [#{dirs => ["src"],
        filter => "*.erl",
        ruleset => erl_files,
        rules =>
          [ { elvis_style
            , invalid_dynamic_call
            , #{ignore => [ achlys
                          ]}
            }
          , { elvis_style
            , god_modules
            , #{limit => 30}
            }
          , { elvis_style
            , dont_repeat_yourself
            , #{ ignore => [achlys_SUITE]
               , min_complexity => 13
               }
            }
          , { elvis_style
            , line_length
            , #{limit => 100}
            }
          ]
       },
      #{dirs => ["test"],
        filter => "*.erl",
        ruleset => erl_files,
        rules =>
          [ { elvis_style
            , no_debug_call
            , disable
            }
          , { elvis_style
            , dont_repeat_yourself
            , #{min_complexity => 13}
            }
          ]
       },
      #{dirs => ["."],
        filter => "Makefile",
        ruleset => makefiles
       },
      #{dirs => ["."],
        filter => "elvis.config",
        ruleset => elvis_config
       }
     ]
    }
   ]
  }
].
